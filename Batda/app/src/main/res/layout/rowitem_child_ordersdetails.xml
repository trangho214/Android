<?xml version="1.0" encoding="utf-8"?>
    <!--rowItem of listview inside childItem_ordersdetails/ -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lv_background"
    android:layout_marginTop="@dimen/value_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/txtDescription_RowItemChildView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/demo_description"/>
    <TextView
        android:id="@+id/txtProductCode_RowItemChildView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription_RowItemChildView"
        android:text="@string/demo_product_code"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/lloPrice_RowItemChildView"
        android:layout_below="@id/txtProductCode_RowItemChildView"
        android:layout_marginTop="@dimen/value_15"
        android:layout_marginBottom="@dimen/value_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtQuantity_RowItemChildView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="right"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="*"/>
        <TextView
            android:id="@+id/txtUnitPrice_RowItemChildView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/demo_price"
            android:gravity="right"
            android:layout_weight="2.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="="/>
        <TextView
            android:id="@+id/txtResult_RowItemChildView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProductCode_RowItemChildView"
            android:text="@string/demo_price"
            android:gravity="right"
            android:layout_weight="2.5"/>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_below="@+id/lloPrice_RowItemChildView"
       android:layout_marginBottom="5dp"
       android:layout_marginLeft="@dimen/value_60"
       android:background="@drawable/dotted_line"></View>
</RelativeLayout>
